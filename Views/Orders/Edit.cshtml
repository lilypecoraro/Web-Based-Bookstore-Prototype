@model Pecoraro_Lillian_HW5.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h1>Edit Order</h1>
<hr />

<div class="row">
    <div class="col-md-6">

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="OrderID" />

            <p><strong>Order Number</strong> @Model.OrderNumber</p>

            <p><strong>Full Name</strong> @Model.Customer.FirstName @Model.Customer.LastName</p>

            <p><strong>Email</strong> @Model.Customer.Email</p>

            <p><strong>Order Date</strong> @Model.OrderDate.ToShortDateString()</p>

            <div class="form-group mb-3">
                <label asp-for="OrderNotes"></label>
                <input asp-for="OrderNotes" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>

        <hr />

        <h3>Products on this Order</h3>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Extended Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.ProductPrice.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@item.ExtendedPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mt-3">
            <a class="btn btn-info"
               asp-controller="OrderDetails"
               asp-action="Create"
               asp-route-orderID="@Model.OrderID">
                Add Another Item
            </a>

            <a class="btn btn-danger"
               asp-controller="OrderDetails"
               asp-action="Index"
               asp-route-orderID="@Model.OrderID">
                Edit Existing Items
            </a>

            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>

    </div>
</div>