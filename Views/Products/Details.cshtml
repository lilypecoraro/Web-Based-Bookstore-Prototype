@model Pecoraro_Lillian_HW5.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>Product</h4>
<hr />

<!-- Product Info -->
<dl class="row">
    <dt class="col-sm-2">Product Name:</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Product Description:</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Product Price:</dt>
    <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

    <dt class="col-sm-2">Product Type:</dt>
    <dd class="col-sm-10">@Model.ProductType</dd>
</dl>

<!-- Suppliers Section -->
<h3>Suppliers for this Product</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Supplier Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Suppliers == null || !Model.Suppliers.Any())
        {
            <tr>
                <td><em>No suppliers assigned.</em></td>
            </tr>
        }
        else
        {
            foreach (var s in Model.Suppliers)
            {
                <tr>
                    <td>@s.SupplierName</td>
                </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>

    @if (User.IsInRole("Admin"))
    {
        <text> | </text>
        <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a>
    }
</div>