@model Pecoraro_Lillian_HW5.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Product</h4>
<hr />

<div class="row">
    <div class="col-md-6">

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProductID" />

            <!-- Product Name -->
            <div class="form-group mb-3">
                <label class="control-label">Product Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="form-group mb-3">
                <label class="control-label">Product Description:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Price -->
            <div class="form-group mb-3">
                <label class="control-label">Product Price:</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Product Type -->
            <div class="form-group mb-3">
                <label class="control-label">Product Type:</label>
                <select asp-for="ProductType"
                        asp-items="Html.GetEnumSelectList<Pecoraro_Lillian_HW5.Models.ProductType>()"
                        class="form-control">
                </select>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <!-- Supplier Listbox -->
            <div class="form-group mb-4">
                <label class="control-label">Associated Suppliers:</label>
                <select name="SelectedSuppliers"
                        multiple="multiple"
                        size="8"
                        class="form-control"
                        asp-items="ViewBag.AllSuppliers">
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>

        <div class="mt-3">
            <a asp-action="Index">Back to List</a>
        </div>

    </div>
</div>