@model IEnumerable<Pecoraro_Lillian_HW5.RoleEditModel>

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Users</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Role.Id</td>
                <td>@role.Role.Name</td>
                <td>
                    @foreach (var user in role.RoleMembers)
                    {
                        @user.Email <br />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Role.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">Create</a>